{
  "name": "document-view-sandbox",
  "version": "1.0.0",
  "description": "Sandbox for document viewer",
  "dependencies": {
    "@recogito/text-annotator": "^3.4.3",
    "@rgrove/parse-xml": "^4.2.0",
    "d3": "^7.9.0",
    "lodash": "^4.17.21",
    "openseadragon": "^5.0.1",
    "points-on-curve": "^1.0.1",
    "points-on-path": "^0.2.1",
    "svg-path-commander": "^2.1.11"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.1",
    "esbuild": "0.27.0",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "build": "./node_modules/.bin/esbuild src/* --define:DEV=false  --bundle --outdir=./static/ --loader:.html=copy",
    "dev": "./node_modules/.bin/esbuild src/**/* --define:DEV=true --bundle --watch --outdir=./static/ --outbase=src --servedir=./static --loader:.html=copy",
    "start": "npm run dev",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,html}\""
  }
}